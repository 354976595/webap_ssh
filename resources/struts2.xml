<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- 设置页面的默认位置 -->
    <!--<constant name="struts.convention.result.path" value="/WEB-INF/content/" />-->
    <constant name="struts.convention.result.path" value="/" />
    <!-- 使用Convention插件,实现约定大于配置的零配置文件风格. 特殊的Result路径在Action类中使用@Result设定. -->
    <constant name="struts.convention.default.parent.package"
              value="crud-default" />

    <!-- 是否显示详细错误信息 -->
    <constant name="struts.devMode" value="true" />
    <!--默认包路径包含action,actions,struts,struts2的所有包都会被struts作为含有Action类的路径来搜索 -->
    <constant name="struts.convention.package.locators" value="action,actions" />
    <!--如果指定了该常量，Convention只会以该常量值开始的包中搜索Action类 -->
    <constant name="struts.convention.package.locators.basePackage" value="com.xjd.web.action.*"/>
    <constant name="struts.ognl.allowStaticMethodAccess" value="true" />

    <!-- 浏览器是否缓存静态内容 -->
    <constant name="struts.serve.static.browserCache" value="true" />
    <!--指定排除在搜索Action之外的包。默认值为org.hibernate.* ... -->
    <constant name="struts.convention.exclude.packages" value="org.apache.struts.*,org.apache.struts2.*,org.springframework.web.struts.*,org.springframework.web.struts2.*,org.hibernate.*"/>
    <constant name="struts.multipart.parser" value="jakarta" />
    <constant name="struts.multipart.maxSize" value="10485760" />
    <!-- 国际化设置 -->
    <constant name="struts.custom.i18n.resources" value="message" />
    <!-- 用于CRUD Action的parent package -->
    <package name="user-package" namespace="/" extends="convention-default">
        <!-- <package name="crud-default" namespace="/" extends="convention-default,json-default"> -->
        <!-- 基于paramsPrepareParamsStack, 增加store interceptor保证actionMessage在redirect后不会丢失 -->
        <interceptors>
            <!--<interceptor name="loginCheck" class="com.apep.interceptor.LoginInterceptor" />-->

            <!-- <interceptor name="tokenCheck" -->
            <!-- class="com.apep.modules.interceptor.TokenInterceptor" /> -->
            <!-- <interceptor name="parametersCheck" class="com.apep.interceptor.ParametersResolveInterceptor"
                /> -->
            <interceptor-stack name="crudStack">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="scopedModelDriven"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="multiselect"/>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="actionMappingParams"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="crudStack" />

        <global-results>
            <!-- 4.设置全局Result -->
            <!--<result name="login">/manager/base/login.jsp</result>-->
            <!--<result name="none">/manager/inc/none.jsp</result>-->
            <!--<result name="invalid.token">/tokenDisp.jsp</result>-->
            <result name="exception">/exception.jsp</result>
        </global-results>
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="exception" />
        </global-exception-mappings>

    </package>
    <package name="crud-default" extends="user-package,json-default" />

</struts>
